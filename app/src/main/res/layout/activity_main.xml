<?xml version="1.0" encoding="utf-8"?>
<android.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quizzcinema.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cinema_imageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:src="@drawable/cinema"
                android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emplacement des questions"
                    android:layout_margin="16dp"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="reponse1"
                    android:layout_marginLeft="32dp"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="reponse2"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="32dp"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="reponse3"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="32dp"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="reponse4"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="32dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUIVANT"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"/>

        </LinearLayout>

</android.widget.ScrollView>
